@using System.Data;

@{
    ViewBag.Title = "AgregarTarea";
    Layout = "~/Views/MasterPages/_layoutEmpleador.cshtml";
}

<style>
    file-field {
        position: relative
    }

    .file-field .file-path-wrapper {
        overflow: hidden;
        padding-left: 10px;
        height: 2.5rem
    }

    .file-field input.file-path {
        width: 100%;
        height: 2.1rem
    }

    .file-field span {
        cursor: pointer
    }

    .file-field input[type=file] {
        position: absolute;
        top: 0;
        right: 0;
        left: 0;
        bottom: 0;
        width: 100%;
        margin: 0;
        padding: 0;
        cursor: pointer;
        opacity: 0
    }
</style>

<section class="section pb-3 text-center text-lg-left">
    <!--Section heading-->
    <h1 class="section-heading h1 dark-grey-text text-center mt-5 pt-lg-3">Nueva tarea</h1>
    <hr>
    <!--Section description-->
    <p class="section-description mb-5 mt-lg-5 mx-lg-5 text-center">
        En este apartado podrás dar de alta una tarea nueva
    </p>

    <div class="row">
        <div class="col-md-8">
            <div class="row">
                <div class="col-md-4">
                    <label class="col-form-label">Título</label>
                </div>
                <div class="col-md-8">
                    <input type="text" id="inputEmail3MD">
                </div>
            </div>

            <p></p>

            <div class="row">
                <div class="col-md-4">
                    <label class="col-form-label">Descripción</label>
                </div>
                <div class="col-md-8">
                    <textarea type="text" id="textareaBasic" class="form-control md-textarea" rows="3"></textarea>
                </div>
            </div>

            <p></p>

            <div class="row">
                <div class="col-md-3">
                    <label class="col-form-label">Clasificación</label>
                </div>
                <div class="col-md-3">
                    <div class="btn-group">
                        <div class="dropdown">
                            @Html.DropDownList("categoria", (IEnumerable<SelectListItem>)ViewBag.PriorityID, new { @class = "btn btn-outline-default dropdown-toggle" })
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <label class="col-form-label">Personas</label>
                </div>
                <div class="col-md-3">
                    <input type="number" min="1" max="10" />
                </div>
            </div>
            
            <p></p>
            <p></p>
            <div class="row">
                <div class="col-md-3">
                    <label class="col-form-label">Fecha</label>
                </div>

                <div class="col-md-3">
                    <input type="date" />
                </div>

                <div class="col-md-3">
                    <label class="col-form-label">Hora</label>
                </div>
                <div class="col-md-3">
                    <input type="time" />
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="md-form">
                <div class="file-field">
                    <div class="btn default-color-dark btn-sm float-left">
                        <span>Agregar imágenes</span>
                        <input type="file" multiple>
                    </div>
                    <div class="file-path-wrapper">
                        <input class="file-path validate" type="text" placeholder="Seleccione sus imágenes">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <hr />

    <div class="row">
        <div class="col-md-12">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3726.3349921208237!2d-89.61852458553538!3d20.939058186047024!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8f5671854abc8929%3A0x68a2a035c6160e2a!2sSanta+Rosa!5e0!3m2!1ses-419!2smx!4v1520983321763" width="100%" height="350" frameborder="0" style="border:0" allowfullscreen></iframe>
        </div>
    </div>

</section>
