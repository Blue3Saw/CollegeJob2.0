    });
</script>

<script>
    function actualizar_slider() {
            $.ajax({
                cache: false,
                async: true,
                type: "POST",
                url: "@Url.Action("Notificaciones", "Principal")",
            data: {},
            success: function (response) {
                $('#nav-left').html('');
                $('#nav-left').html(response);
            }
        });
    }
</script>