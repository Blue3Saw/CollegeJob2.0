<style>
    file-field {
        position: relative
    }

    .file-field .file-path-wrapper {
        overflow: hidden;
        padding-left: 10px;
        height: 2.5rem
    }

    .file-field input.file-path {
        width: 100%;
        height: 2.1rem
    }

    .file-field span {
        cursor: pointer
    }

    .file-field input[type=file] {
        position: absolute;
        top: 0;
        right: 0;
        left: 0;
        bottom: 0;
        width: 100%;
        margin: 0;
        padding: 0;
        cursor: pointer;
        opacity: 0
