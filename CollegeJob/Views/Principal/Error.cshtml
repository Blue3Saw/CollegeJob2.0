
@{
    ViewBag.Title = "Error";

    if (Session["Codigo"].ToString() == "2")
    {
        Layout = "~/Views/MasterPages/_layoutEmpleador.cshtml";
    }
    else
    {
        Layout = "~/Views/MasterPages/_layoutEstudiante.cshtml";
    }
    }

@{
    if (Session["Permiso"].ToString() == "2" || Session["Permiso"].ToString() == "3")
    {
        <section class="section pb-3 text-center text-lg-left">
            <div class="row">
                <table border="0" cellpadding="0" cellspacing="0" style="width: 100%; background-color: #f4f8fb; font-family: 'Helvetica Neue',Helvetica,Arial,sans-serif; box-sizing: border-box; font-size: 15px;" bgcolor="#f8f8f8">
                    <tr>
                        <td>
                            <table align="center" border="0" cellpadding="0" cellspacing="0" width="600" style="width:600; background-color: #ffffff; color: #514d6a; padding: 40px; margin-top: 40px; line-height: 28px;" bgcolor="#ffffff">
                                <tr>
                                    <td style="text-align: center; vertical-align: top;">
                                        <p>Equipo de desarrolladores de CollegeJob</p>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="text-align: center; padding-top: 60px; font-weight: 300; font-size: 42px; line-height: 48px; font-family: 'Open Sans',Helvetica,Arial,sans-serif; color: #111; letter-spacing: -1px;">
                                        CollegeJob
                                    </td>
                                </tr>
                                <tr>
                                    <td style="text-align: center; padding-top: 30px; vertical-align: top;">
                                        <img src="~/Recursos/FrontEnd/img/images/logoCollegeJob.png" alt="" style="border: 1px solid #ddd; padding: 5px; display:inline-block; border-radius: 128px;" height="128" width="128">
                                        <h1 style="margin-bottom: 5px; font-weight: 600; color: #222; font-family: 'Open Sans',Helvetica,Arial,sans-serif;">@ViewBag.error</h1>
                                        <h4 style="margin-bottom: 5px; font-weight: 600; color: #222; font-family: 'Open Sans',Helvetica,Arial,sans-serif;">@ViewBag.Title</h4>
                                        <h4 style="margin-bottom: 5px; font-weight: 600; color: #222; font-family: 'Open Sans',Helvetica,Arial,sans-serif;">@ViewBag.Description</h4>
                                        @*<p style="color: #85868a; margin-top: 0;">@ViewBag.Title</p>
                                        <p style="color: #85868a; margin-top: 0;">@ViewBag.Description</p>*@
                                    </td>
                                </tr>
                                <tr>
                                    <td style="text-align: center; padding-top: 30px; padding-bottom: 30px;">
                                        @if (Session["Permiso"].ToString() == "2")
                                        {
                                            <a href="~/Empleador/Index" style="margin-bottom: 10px; letter-spacing: -1px; font-family: 'Open Sans',Helvetica,Arial,sans-serif; text-decoration: none; display: inline-block; line-height: 70px; padding-left: 30px; padding-right: 30px; border-radius: 3px; font-size: 24px; color: #fff; background-color: #27cbcc;">
                                                Continuar
                                            </a>
                                        }
                                        else if(Session["Permiso"].ToString() == "3")
                                        {
                                            <a href="~/Estudiante/Index" style="margin-bottom: 10px; letter-spacing: -1px; font-family: 'Open Sans',Helvetica,Arial,sans-serif; text-decoration: none; display: inline-block; line-height: 70px; padding-left: 30px; padding-right: 30px; border-radius: 3px; font-size: 24px; color: #fff; background-color: #27cbcc;">
                                                Continuar
                                            </a>
                                        }
                                        <br />
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <table align="center" border="0" cellpadding="0" cellspacing="0" width="600" style="border:none; width:600; margin-top: 20px; margin-bottom: 40px; text-align: center; color: #85868a;">
                                <tr>
                                    <td style="padding-top: 20px;">
                                        Copyright &copy; 2018 CollegeJOb. All Rights Reserved. We appreciate you!
                                    </td>
                                </tr>
                                <tr>
                                    <td style="padding-top: 10px; font-weight: 800; font-size: 12px; text-transform: uppercase; font-family: 'Open Sans',Helvetica,Arial,sans-serif;">
                                        <a href="javascript: void(0);" target="_blank" style="color: #222; text-decoration: none;">Help Center</a> <span style="color: #222; font-size: 24px; margin-left: 20px; margin-right: 20px;">&#8901;</span>
                                        <a href="javascript: void(0);" target="_blank" style="color: #222; text-decoration: none;">1(800)234-56-78</a> <span style="color: #222; font-size: 24px; margin-left: 20px; margin-right: 20px;">&#8901;</span>
                                        <a href="javascript: void(0);" target="_blank" style="color: #222; text-decoration: none;">Unsubscribe</a>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                </table>
            </div>
        </section>

    }
}
