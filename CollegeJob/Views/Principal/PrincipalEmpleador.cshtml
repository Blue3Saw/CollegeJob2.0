    <!-- ------------------------------Carrusel empleadores------------------------------------->
    <div class="container" id="CarruselTareas">
        <div id="multi-item-example3" class="carousel slide carousel-multi-item" data-ride="carousel">
            <!--Controls-->
            <div class="controls-top">
                <a class="btn-floating btn-default waves-effect waves-light" href="#multi-item-example3" data-slide="prev">
                    <i class="fa fa-chevron-left"></i>
                </a>
                <a class="btn-floating btn-default waves-effect waves-light" href="#multi-item-example3" data-slide="next">
                    <i class="fa fa-chevron-right"></i>
                </a>
            </div>
            <!--Controls-->
            <!--Indicators-->
            <ol class="carousel-indicators">
                <li class="active btn-default" data-target="#multi-item-example3" data-slide-to="0"></li>
                <li class="btn-default" data-target="#multi-item-example3" data-slide-to="1"></li>
            </ol>
            <!--Indicators-->
            <!--Slides-->
            <div class="carousel-inner" role="listbox">
                <!--First slide-->
                <div class="carousel-item active">
                    @{
                        DataTable TopTareas1 = ViewData["TopParte1"] as DataTable;
                        int ContT1 = 0;
                        foreach (DataRow row in TopTareas1.Rows)
                        {
                            if (ContT1 == 0)
                            {
                                <div class="col-md-4">
                                    <div class="card card-cascade wider card-ecommerce">
                                        <div class="view overlay hm-white-slight">
                                            @if (row["Imagen"].ToString() == "")
                                            {
                                                <img src="~/Recursos/FrontEnd/img/images/task_alt.jpg" class="img-fluid" />
                                            }
                                            else
                                            {
                                                
                                                <img src="@row["Imagen"]" class="img-fluid" />
                                            }
                                            <a>
                                                <div class="mask waves-effect waves-light"></div>
                                            </a>
                                        </div>
                                        <div class="card-body text-center no-padding">
                                            <h4 class="card-title my-4">
                                                <strong>
                                                    <a href="" class="teal-text">@row["Nombre"]</a>
                                                </strong>
                                            </h4>
                                            <p class="card-text">
                                                Texto prueba
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="col-md-4 clearfix d-none d-md-block">
                                    <div class="card card-cascade wider card-ecommerce">
                                        <div class="view overlay hm-white-slight">
                                            @if (row["Imagen"].ToString() == "")
                                            {
                                                <img src="~/Recursos/FrontEnd/img/images/task_alt.jpg" class="img-fluid" />
                                            }
                                            else
                                            {
                                               
                                                <img src="@row["Imagen"]" class="img-fluid" />
                                            }
                                            <a>
                                                <div class="mask waves-effect waves-light"></div>
                                            </a>
                                        </div>
                                        <div class="card-body text-center no-padding">
                                            <h4 class="card-title my-4">
                                                <strong>
                                                    <a href="" class="teal-text">@row["Nombre"]</a>
                                                </strong>
                                            </h4>
                                            <p class="card-text">
                                                Texto prueba
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    }
                </div>
                <!--First slide-->
                <!--Second slide-->
                <div class="carousel-item">
                    @{
                        DataTable TopTareas2 = ViewData["TopParte2"] as DataTable;
                        int ContT2 = 0;
                        foreach (DataRow row in TopTareas2.Rows)
                        {
                            if (ContT2 == 0)
                            {
                                <div class="col-md-4">
                                    <div class="card card-cascade wider card-ecommerce">
                                        <div class="view overlay hm-white-slight">
                                            @if (row["Imagen"].ToString() == "")
                                            {
                                                <img src="~/Recursos/FrontEnd/img/images/task_alt.jpg" class="img-fluid" />
                                            }
                                            else
                                            {
                                              
                                                <img src="@row["Imagen"]" class="img-fluid" />
                                            }
                                            <a>
                                                <div class="mask waves-effect waves-light"></div>
                                            </a>
                                        </div>
                                        <div class="card-body text-center no-padding">
                                            <h4 class="card-title my-4">
                                                <strong>
                                                    <a href="" class="teal-text">@row["Nombre"]</a>
                                                </strong>
                                            </h4>
                                            <p class="card-text">
                                                Texto prueba
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="col-md-4 clearfix d-none d-md-block">
                                    <div class="card card-cascade wider card-ecommerce">
                                        <div class="view overlay hm-white-slight">
                                            @if (row["Imagen"].ToString() == "")
                                            {
                                                <img src="~/Recursos/FrontEnd/img/images/task_alt.jpg" class="img-fluid" />
                                            }
                                            else
                                            {
                                              
                                                <img src="@row["Imagen"]" class="img-fluid" />
                                            }
                                            <a>
                                                <div class="mask waves-effect waves-light"></div>
                                            </a>
                                        </div>
                                        <div class="card-body text-center no-padding">
                                            <h4 class="card-title my-4">
                                                <strong>
                                                    <a href="" class="teal-text">@row["Titulo"]</a>
                                                </strong>
                                            </h4>
                                            <p class="card-text">
                                                @row["Descripcion"]
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    }
                </div>
                <!--Second slide-->
            </div>
            <!--Slides-->
        </div>
    </div>
    <!-- ------------------------------------ Fin carrusel -------------------------------------------->

